
@{
    ViewBag.Title = "PaymentForm";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<div>
    <div class="container py-5">
        <!-- For demo purpose -->
        <div class="row mb-4">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-6" style="font-family: 'Dancing Script', cursive;">ORDER PAYMENT</h1>
            </div>
        </div> <!-- End -->
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card ">
                    <div class="card-header">
                        <div class="bg-white shadow-sm pt-4 pl-2 pr-2 pb-2">
                            <!-- Credit card form tabs -->
                            <ul role="tablist" class="nav bg-light nav-pills rounded nav-fill mb-2">
                                <li class="nav-item"> <a data-toggle="pill" href="#credit-card" class="nav-link active "> <i class="fas fa-credit-card mr-2"></i> Credit Card </a> </li>
                                <li class="nav-item"> <a data-toggle="pill" href="#net-banking" class="nav-link "> <i class="fas fa-car mr-2"></i>Cash On Delivery</a> </li> 
</ul>
                        </div> <!-- End -->
                        <!-- Credit card form content -->
                        <div class="tab-content">
                            <!-- credit card info-->
                            <div id="credit-card" class="tab-pane fade show active pt-3">
                                @using (Html.BeginForm("PaymentForm", "Payment", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label for="username">
                                            <h6>Card Owner</h6>
                                        </label> 
                                        <input type="text" name="txtUserName" placeholder="Card Owner Name" required class="form-control ">
                                    </div>
                                    <div class="form-group">
                                        <label for="cardNumber">
                                            <h6>Card number</h6>
                                        </label>
                                        <div class="input-group">
                                            <input type="number" name="txtCardNumber" placeholder="Valid card number" class="form-control " required>
                                            <div class="input-group-append"> <span class="input-group-text text-muted"> <i class="fab fa-cc-visa mx-1"></i> <i class="fab fa-cc-mastercard mx-1"></i> <i class="fab fa-cc-amex mx-1"></i> </span> </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        @*<div class="col-sm-8">
                                            <div class="form-group">
                                                <label>
                                                    <span class="hidden-xs">
                                                        <h6>Expiration Date</h6>
                                                    </span>
                                                </label>
                                                <div class="input-group">
                                                    <input type="number" placeholder="DD" name="txtDay" class="form-control" required>
                                                    <input type="number" placeholder="MM" name="txtMonth" class="form-control" required>
                                                    <input type="number" placeholder="YY" name="txtYear" class="form-control" required>
                                                </div>
                                            </div>
                                        </div>*@
                                        <div class="col-sm-12">
                                            <div class="form-group mb-12">
                                                <label data-toggle="tooltip" title="Three digit CV code on the back of your card">
                                                    <h6>CVV <i class="fa fa-question-circle d-inline"></i></h6>
                                                </label> 
                                                <input type="number" name="txtCvv" required class="form-control" placeholder="Cvv">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="deliveryaddress ">
                                            <h6>Delivery Address</h6>
                                        </label>
                                        <input type="text" name="txtDeliveryAddress" placeholder="Delivery Address" required class="form-control" style="padding-bottom: 60px; padding-top: 20px;">
                                    </div>

                                    <div class="card-footer">
                                        <button type="submit" class="subscribe btn btn-primary btn-block shadow-sm"> Confirm Payment </button>
                                    </div>
                                }
                                <hr />
                                <div>
                                    <span style="color: limegreen; font-weight: bold; font-size: 17px;">Total Order: $@ViewBag.TotalCart</span>
                                </div>
                            </div> <!-- End -->
                        <!-- bank transfer info -->
                            <div id="net-banking" class="tab-pane fade pt-3">
                                @using (Html.BeginForm("PaymentForm", "Payment", FormMethod.Post))
                                {
                                    <div class="form-group">
                                        <label for="Delivery">
                                            <h6>Delivery Address</h6>
                                        </label>
                                        <input type="text" name="username" placeholder="Delivery Address" required class="form-control" style="padding-bottom: 60px; padding-top: 20px;">
                                    </div>

                                    <div class="card-footer">
                                        <button type="submit" class="subscribe btn btn-primary btn-block shadow-sm"> Confirm Payment </button>
                                    </div>
                                    <p class="text-muted">Note: At the end of recieving your order, you need to do full payment. After completing the payment process, you can check your updated order status.</p>
                                }
                                <hr />
                                <div>
                                    <span style="color: limegreen; font-weight: bold; font-size: 17px;">Total Order: $@ViewBag.TotalCart</span>
                                </div>
                            </div> <!-- End -->
                        <!-- End -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link />

<!--Css-->
<style>
    .rounded {
        border-radius: 1rem
    }

    .nav-pills .nav-link {
        color: #555
    }

        .nav-pills .nav-link.active {
            color: white
        }

    input[type="radio"] {
        margin-right: 5px
    }

    .bold {
        font-weight: bold
    }
</style>

<!--Script-->
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>