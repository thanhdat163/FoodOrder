@using OnlineFoodOrder_Website.Models;
@model Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<style>
    
    label{
        text-align: right;
    }
</style>

<h2 style="text-align: center; font-weight: bold; margin-top: 20px;">Category Edit</h2>

<div style="width: 90%; margin: auto; border: 1px solid black; margin-top: 50px; box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.5); border-radius: 5px;">
    <div>
        @using (Html.BeginForm("UpdateCategory", "CategoryManager", FormMethod.Post))
        {
            <div class="form-horizontal" style="margin-top: 20px;">
                @Html.HiddenFor(model => model.CategoryID)

                <div class="form-group">
                    <label class="control-label col-md-2">CategoryName</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", style = "width: 90%;" } })
                    </div>
                </div>

                @if (Model.ImageUrl != null)
                {
                    <div class="form-group">
                        <label class="control-label col-md-2">Image</label>
                        <div class="col-md-10">
                            <img src="@Url.Content("../Image/" + Model.ImageUrl)" alt="" name="txtImageUrl" />
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="control-label col-md-2">Image</label>
                        <div class="col-md-10">
                            <img src="@Url.Content("../Image/ImageNull.jpg")" alt="" />
                        </div>
                    </div>
                }

                <div class="form-group">
                    <label class="control-label col-md-2">CreateDate</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CreateDate, "{0:MM/dd/yyyy}", new { @class = "form-control", @readonly = "readonly", style = "width: 90%;" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">IsActive</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control", style = "width: 90%;" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a href="@Url.Action("AddCategory", "CategoryManager")" class="btn btn-success" style="margin-left: 20px;">Back to List</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>